@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="header"></div>
</div>

<div class="container login-form">
    <div class="row">
        <div class="col-lg-12">
            <h1>CloudBox</h1>
            <p>
                Multiplatform cloud system.
            </p>
            <p>
                <a href="~/Account/Login" class="btn btn-primary form-control" id="btnlogin">Log in</a>
            </p>
            <p>
                <a href="~/Account/Register" class="btn btn-success form-control">Register</a>
            </p>
        </div>
    </div>
</div>

<div class="row text-center">
    <div class="col-md-4">
        <h2>Windows</h2>
        <p>
            Get windows application
        </p>
        <p>
            <img src="~/Images/Windows_logo_300x300.png" width="50" height="50" alt="Windows" />
        </p>
        <p>
            <a class="btn btn-default" href="/Home/WindowsDownload">Download</a>
        </p>
    </div>
    <div class="col-md-4">
        <h2>Android</h2>
        <p>
            Get android application
        </p>
        <p>
            <img src="~/Images/Android_logo.png" width="50" height="50" alt="Android" />
        </p>
        <p>
            <a class="btn btn-default" href="/Home/AndroidDownload">Download</a>
        </p>
    </div>
    <div class="col-md-4">
        <h2>iOS</h2>
        <p>
            Get iOS application
        </p>
        <p>
            <img src="~/Images/ios_Logo.png" width="50" height="50" alt="iOS" />
        </p>
        <p>
            <a class="btn btn-default" href="/Home/IOSDownload">Download</a>
        </p>
    </div>
</div>

@section styles {
    <style>
        .header {
            background-size: cover;
            height: 80vh;
            opacity: 0.5;
            background: url('../../Images/cloud_big_image.jpg') fixed no-repeat center;
            background-size: 100%;
            color: white;
            text-align: center;
        }

        .login-form {
            top: 30%;
            text-align: center;
            position: absolute;
            left: 50%;
            transform: translate(-50%, -50%);
            -ms-transform: translate(-50%, -50%);
        }
    </style>
}
