<table class="table table-hover table-responsive">
    <tr>
        <th>
            <div class="btn-group">
                <input type="file" name="upload" class="btn btn-default" id="uploadFile" />
                <button id="uploadFileButton" class="btn btn-primary">Upload</button>
            </div>
            <div class="btn-group">
                <button id="createFolderButton" class="btn btn-default">Folder</button>
                <button id="moveToFolderButton" class="btn btn-default">Move to</button>
                <button id="removeButton" class="btn btn-danger">Delete</button>
            </div>
        </th>
    </tr>
    <tr>
        <td>
            <p id="linkToPrevDirectory" onclick="linkToPrevClicked()">...</p>
        </td>
    </tr>
    @foreach (var directory in ViewBag.Directories)
    {
        <tr>
            <td id="@directory" onclick="$('#currentPath').append('\\@directory'); onFolderClicked();">@directory</td>
        </tr>
    }
    @foreach (var file in ViewBag.Files)
    {
        <tr>
            <td><a href="~/Files/@ViewBag.DirectoriesAndFilesRelativePath/@file">@file</a></td>
        </tr>
    }
</table>