<Window x:Class="CloudBox.WPFClient.CreateDirectoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create new directory" Height="130" Width="300" KeyDown="CreateDirectoryWindow_OnKeyDown">
    <Grid>
        <Label Content="Enter name" HorizontalAlignment="Left" Margin="20,3,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <TextBox x:Name="DirectoryName" HorizontalAlignment="Center" Height="23" Margin="20,29,22,0" TextWrapping="Wrap" Text="NewFolder" VerticalAlignment="Top" Width="250"/>
        <Button x:Name="CreateButton" Content="Create" HorizontalAlignment="Left" Margin="20,0,0,10" VerticalAlignment="Bottom" Width="75" Click="CreateButton_OnClick"/>
        <Button x:Name="CancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="100,0,0,10" VerticalAlignment="Bottom" Width="75" Click="CancelButton_OnClick"/>
    </Grid>
</Window>
